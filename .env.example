# ===== Time Calculation (V2) =====
# Set to "2" to enable daily 1.5h break deduction + 15-min rounding (nearest)
TIME_CALC_VERSION=2
# Round step in minutes (e.g., 15)
TIME_CALC_ROUND_MINUTES=15
# Daily break deduction in minutes (e.g., 90 = 1.5h)
TIME_CALC_BREAK_MINUTES=90
# Round mode: nearest | up | down
TIME_CALC_ROUND_MODE=nearest

# ===== Forced OUT automation =====
# Airtable base/table configuration
AIRTABLE_API_KEY=
AIRTABLE_BASE_ID=
AIRTABLE_TABLE_LOGS=Logs
AIRTABLE_FIELD_TIMESTAMP=timestamp
AIRTABLE_FIELD_TYPE=type
AIRTABLE_FIELD_USER=user
AIRTABLE_FIELD_MACHINE_ID=machineId

# Forced OUT timing controls
FORCED_OUT_JST_TIME=17:30
FORCED_OUT_MIN_GAP_MINUTES=5
FORCED_OUT_MAX_HOURS_PER_DAY=12
# Optional metadata propagation
# FORCED_OUT_FLAG_FIELD=isForcedOut
# FORCED_OUT_SOURCE_FIELD=outSource
FORCED_OUT_SOURCE_VALUE=forced

# Snapshot + writeback configuration
FORCED_OUT_SNAPSHOT_ENABLE=true
FORCED_OUT_SNAPSHOT_FIELD=inSnapshot
FORCED_OUT_WRITE_BACK_FIELDS=true
FORCED_OUT_WRITE_BACK_BATCH=5
FORCED_OUT_WRITE_BACK_DELAY_MS=200
